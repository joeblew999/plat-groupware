# Default config values - tracked in git
# For secrets, create .env.local (gitignored) which overrides these

# Process Compose
PC_PORT=8080

# NATS
NATS_PORT=4222
NATS_URL=nats://localhost:4222

# Narun HTTP/gRPC gateway
NARUN_PORT=8081
NARUN_METRICS_PORT=9091

# nats2sse (NATS to SSE bridge for Datastar)
NATS2SSE_PORT=8083

# Stalwart Mail Server
STALWART_HTTP_PORT=8085
STALWART_SMTP_PORT=2525
STALWART_IMAP_PORT=1143
STALWART_LOG_LEVEL=info
STALWART_VERSION=v0.15.3

# SeekStorm Search Engine
SEEKSTORM_PORT=8086
SEEKSTORM_VERSION=v0.12.19

# Meilisearch (alternative FTS engine)
MEILISEARCH_PORT=7700
MEILISEARCH_VERSION=v1.13.0

# Secrets go in .env.local (not tracked):
#   NATS_USER=myuser
#   NATS_PASSWORD=mypassword
#   NATS_TOKEN=mytoken
#   STALWART_ADMIN_PASSWORD=changeme
#   MASTER_KEY_SECRET=seekstorm-secret
#   SEEKSTORM_API_KEY=your-api-key
#   MEILI_MASTER_KEY=your-master-key
